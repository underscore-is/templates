{
  "$schema": "https://app.underscore.is/schemas/undr-template.json",
  "id": "cpp",
  "name": "C++",
  "description": "Build an API server with C++",
  "bootstrap": {
    "requires": ["cpp", "cmake"],
    "files": "app"
  },
  "workspace": {
    "scripts": {
      "install": "cmake -B build && cmake --build build",
      "dev": "./build/app",
      "build": "cmake --build build --config Release"
    },
    "preview": {
      "type": "web",
      "command": "dev",
      "port": 8080
    },
    "openFiles": ["cloud_run_hello.cc"]
  }
}
