{
  "$schema": "https://underscore.is/schemas/undr-template.json",
  "id": "postgres",
  "name": "Postgres",
  "description": "Start with a Postgres SQL database",
  "bootstrap": {
    "requires": ["nodejs", "postgres"],
    "files": "app"
  },
  "workspace": {
    "scripts": {
      "install": "npm ci --no-audit --prefer-offline",
      "dev": "npm run dev",
      "build": "echo 'No build step required'"
    },
    "preview": {
      "type": "web",
      "command": "dev",
      "port": 3000
    },
    "openFiles": ["index.js"]
  }
}
