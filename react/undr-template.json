{
  "$schema": "https://underscore.is/schemas/undr-template.json",
  "id": "react",
  "name": "React",
  "description": "Build a new web app using React and Vite",
  "params": [
    {
      "id": "language",
      "name": "Language",
      "type": "enum",
      "default": "ts",
      "options": {
        "js": "JavaScript",
        "ts": "TypeScript"
      }
    }
  ],
  "bootstrap": {
    "requires": ["nodejs"],
    "commands": [
      "npm create -y vite@latest . -- --template {{language == 'ts' ? 'react-ts' : 'react'}}",
      "npm install --package-lock-only --ignore-scripts"
    ]
  },
  "workspace": {
    "scripts": {
      "install": "npm ci --no-audit --prefer-offline",
      "dev": "npm run dev -- --host 0.0.0.0",
      "build": "npm run build",
      "preview": "npm run preview"
    },
    "preview": {
      "type": "web",
      "command": "dev"
    },
    "openFiles": ["src/App.tsx", "src/App.jsx", "src/App.js"]
  }
}
