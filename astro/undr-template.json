{
  "$schema": "https://underscore.is/schemas/undr-template.json",
  "id": "astro",
  "name": "Astro",
  "description": "Create a new full-stack web app with Astro",
  "bootstrap": {
    "requires": ["nodejs"],
    "commands": [
      "npm create astro@latest . -- --template basics --no-git --install --yes",
      "npm install --package-lock-only --ignore-scripts"
    ]
  },
  "workspace": {
    "scripts": {
      "install": "npm ci --no-audit --prefer-offline",
      "dev": "npm run dev -- --host 0.0.0.0",
      "build": "npm run build"
    },
    "preview": {
      "type": "web",
      "command": "dev"
    },
    "openFiles": ["src/pages/index.astro"]
  }
}
